<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_add_new_items"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.thearbiter.amityseller.AddNewItems">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewfindSchool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        card_view:cardBackgroundColor="#ffffff"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="8dp"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            >


        <TextView
            android:textColor="#000000"
            android:text="Add new Item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:id="@+id/textView9" />
        <TextView
            android:text="Item Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:id="@+id/newItemAdd"
            android:layout_below="@id/textView9"
            />
            <TextView
                android:text="Price Of item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:id="@+id/newitemPrice"
                android:layout_below="@id/newItemAdd"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:hint="New item name"
                android:ems="10"
                android:id="@+id/addnewItem"
                android:layout_alignBaseline="@+id/newItemAdd"
               android:layout_toRightOf="@+id/newItemAdd"
                android:layout_toEndOf="@+id/newItemAdd"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                 />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:hint="New item name"
                android:ems="10"
                android:id="@+id/addnewPrice"
               android:layout_alignBaseline="@+id/newitemPrice"
                android:layout_toRightOf="@+id/newItemAdd"
                android:layout_toEndOf="@+id/newItemAdd"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="100dp"
                card_view:srcCompat="@android:color/background_dark"
                android:id="@+id/tempImage"
                android:layout_alignTop="@+id/cancelButton"
                android:layout_alignLeft="@+id/newitemPrice"
                android:layout_alignStart="@+id/newitemPrice" />

            <Button
                android:text="Add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/addnew"
android:layout_marginTop="10dp"
                android:layout_below="@+id/newitemPrice"
                android:layout_alignRight="@+id/textView9"
                android:layout_alignEnd="@+id/textView9" />

            <Button
                android:text="Upload"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:id="@+id/upoadImage"
                android:textSize="8sp"
                android:layout_below="@+id/tempImage"
                android:layout_toRightOf="@+id/choseImage"
                android:layout_toEndOf="@+id/choseImage" />

            <Button
                android:text="Choose"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:id="@+id/choseImage"
                android:textSize="9sp"

                android:layout_below="@+id/tempImage"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Button
                android:text="Cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cancelButton"
                android:onClick="cancelIt"
                android:layout_alignBaseline="@+id/addnew"
                android:layout_alignBottom="@+id/addnew"
                android:layout_toRightOf="@+id/addnew"
                android:layout_toEndOf="@+id/addnew" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>
